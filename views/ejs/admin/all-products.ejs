<%-include('../includes/Head.ejs')%>
<%- include('../includes/Navigation.ejs') %>
   <% if (data.length >0) {%>
    <div class="products">
      <% for( let product of data ) {%>
       <div class="card">
         <img class="card-img" src=<%=product.image%>>
         <div class="card-title"><%=product.title%></div>
         <div class="card-description"><%=product.description%></div>
         <div class="card-price price"><%=product.price%></div>
         <form class="btns-form" >
            <a href="/edit-product/<%=product.id%>?edit=true" class=" btn-details" type="submit">Edit</a>
           
         </form>
         <form method="post" action="/delete-product">
            <input type="hidden" value="<%=product.id%>" name="id">
            <button  class="btn-add Add" type="submit">Delete</button>
         </form>
       </div>
       <% }%>
    <% }  else { %>
 <h1 style="text-align: center;"> No Products There</h1>
    <% }%>
<%- include('../includes/End.ejs') %>